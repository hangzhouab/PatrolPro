<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shoppingmall_index_bg_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10.0dip"
            android:text="注册个人信息"
            android:textColor="#ff24ced8"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@id/add_userinfo_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0.0dip"
            android:background="@drawable/back_btn_state" />

        <TextView
            android:id="@+id/reg_userinfo_next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:text="下一步"
            android:textColor="@color/title_right_text_selector"
            android:textSize="@dimen/value_text_size" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/account_regist_relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffffff"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip" >

                        <TextView
                            android:id="@id/regist_account_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20.0dip"
                            android:text="手  机  号："
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/value_text_size" />

                        <EditText
                            android:id="@+id/regist_account_edittext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/regist_account_text"
                            android:background="#00000000"
                            android:gravity="right"
                            android:hint="请输手机号码"
                            android:inputType="number"
                            android:maxLength="30"
                            android:paddingLeft="10.0dip"
                            android:textSize="@dimen/value_text_size" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true"
                            android:background="#ffbfbfbf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip" >

                        <TextView
                            android:id="@id/regist_account_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20.0dip"
                            android:text="姓        名："
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/value_text_size" />

                        <EditText
                            android:id="@+id/regist_username_edittext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/regist_account_text"
                            android:background="#00000000"
                            android:gravity="right"
                            android:hint="请输您的名字"
                            android:inputType="text"
                            android:maxLength="30"
                            android:paddingLeft="10.0dip"
                            android:textSize="@dimen/value_text_size" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true"
                            android:background="#ffbfbfbf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip" >

                        <TextView
                            android:id="@id/regist_password_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20.0dip"
                            android:text="密        码："
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/value_text_size" />

                        <EditText
                            android:id="@id/regist_password_edittext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/regist_password_text"
                            android:background="#00000000"
                            android:gravity="right"
                            android:hint="请输入6~18位的密码"
                            android:inputType="textPassword"
                            android:paddingLeft="10.0dip"
                            android:textSize="@dimen/value_text_size" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true"
                            android:background="#ffbfbfbf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/regist_confirm_password_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20.0dip"
                            android:text="密码确认："
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/value_text_size" />

                        <EditText
                            android:id="@id/regist_confirm_password_edittext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/regist_confirm_password_text"
                            android:background="#00000000"
                            android:gravity="right"
                            android:hint="请输入6~18位的密码"
                            android:inputType="textPassword"
                            android:paddingLeft="10.0dip"
                            android:textSize="@dimen/value_text_size" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true"
                            android:background="#ffbfbfbf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip" >

                        <TextView
                            android:id="@id/regist_account_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20.0dip"
                            android:text="验  证  码："
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/value_text_size" />

                        <EditText
                            android:id="@+id/regist_requestcode_edittext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/regist_account_text"
                            android:background="#00000000"
                            android:gravity="right"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:maxLength="30"
                            android:paddingLeft="10.0dip"
                            android:textSize="@dimen/value_text_size" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true"
                            android:background="#ffbfbfbf" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/reg_request_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:background="#ff24ced8"
                android:padding="10dp"
                android:text="请求验证码" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>