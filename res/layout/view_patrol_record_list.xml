<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_item_state"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/view_meal_list_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"        
        android:src="@drawable/access_point"
        android:focusable="false"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@id/view_meal_list_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:text="浙江电信大楼三楼机房"
                android:textSize="@dimen/value_text_size" />

            <TextView
                android:id="@id/view_meal_list_cal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-08-26 18:55"
                android:textColor="#ffa1a3a6"
                android:textSize="@dimen/value_text_size" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>