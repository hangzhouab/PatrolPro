<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/guide1_image_layout"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="16.0" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/guide5_main_pic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guide5_text" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="3.0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="2.0" >

            <ImageView
                android:id="@id/guide5_line_left"
                android:layout_width="fill_parent"
                android:layout_height="10.0dip"
                android:layout_centerVertical="true"
                android:background="#ff89f8ef" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="5.0" >

            <Button
                android:id="@id/guide_no_account"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_btn_select"
                android:text="开始体验"
                android:textColor="#ffffffff"
                android:textSize="19.0dip"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="1.0" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="5.0" >

            <Button
                android:id="@id/guide_have_account"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_centerVertical="true"
                android:background="@drawable/red_button_state"
                android:text="账号登陆"
                android:textColor="#ffffffff"
                android:textSize="19.0dip"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="2.0" >

            <ImageView
                android:id="@id/guide5_line_left"
                android:layout_width="fill_parent"
                android:layout_height="10.0dip"
                android:layout_centerVertical="true"
                android:background="#ffff6a62" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>