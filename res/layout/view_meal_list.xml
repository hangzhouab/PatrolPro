<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_item_state"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/view_meal_list_icon_iv"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_margin="5.0dip"
        android:src="@drawable/fooditem3"
        android:focusable="false"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@id/view_meal_list_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/value_text_size" />

            <TextView
                android:id="@id/view_meal_list_cal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/value_text_size" />
        </LinearLayout>

        <Button
            android:id="@id/view_meal_list_xx_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/mail_attach_item_arrow"
            android:focusable="false" />
    </RelativeLayout>

</LinearLayout>