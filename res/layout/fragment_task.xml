<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.ab.health"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/task_background" >

            <RelativeLayout
                android:id="@id/task_consum_circle_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" >
 
                        <RelativeLayout
                            android:id="@id/task_target_weight_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50.0dip"
                            android:background="@drawable/task_target_weight1" >                            
                        </RelativeLayout>

                        
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3.0" >

                        <ImageView
                            android:id="@id/task_consum_circle_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/main_circle_scale" />

                        <com.ab.health.view.RoundProgressBar
                            android:id="@+id/TaskProgressBar"
                            android:layout_width="165dip"
                            android:layout_height="165dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/task_circle_round"
                            android_custom:roundColor="#dddddd"
                            android_custom:roundProgressColor="#ff24cdd8"
                            android_custom:roundWidth="8dip" />

                        <RelativeLayout
                            android:id="@id/task_consum_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/task_ground_state" >

                            <ImageView
                                android:id="@id/task_consum_needle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3.0dip"
                                android:background="@drawable/main_blue_bar" />

                            <TextView
                                android:id="@id/task_consum_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_consum_needle"
                                android:layout_centerHorizontal="true"
                                android:text="运动消耗/目标"
                                android:textColor="#ffff6a62" />

                            <TextView
                                android:id="@id/task_consum_kg_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_consum_tv"
                                android:layout_centerHorizontal="true"
                                android:text="(卡路里)"
                                android:textColor="#ff999999" />

                            <TextView
                                android:id="@+id/task_yundong_current_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_consum_kg_tv"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0.0dip"
                                android:text="12330"
                                android:textColor="#ffff6a62"
                                android:textSize="20.0dip" />

                            <TextView
                                android:id="@+id/task_sports_target_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_yundong_current_textView"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3.0dip"
                                android:text="12330"
                                android:textColor="#ff24cdd8"
                                android:textSize="18.0dip" />
                            
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" >

                        <RelativeLayout
                            android:id="@id/task_current_weight_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="50.0dip"
                            android:background="@drawable/task_target_weight2"
                             >
                        </RelativeLayout>

                        
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/task_add_userinfo_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    
                    android:orientation="vertical" />
            </RelativeLayout>
        </FrameLayout>
		<FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/task_background" >

            <RelativeLayout
                android:id="@id/task_consum_circle_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" >

                        <RelativeLayout
                            android:id="@id/task_target_weight_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="80.0dip"
                            android:background="@drawable/task_target_weight4" >

                            
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3.0" >

                        <ImageView
                            android:id="@id/task_consum_circle_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/main_circle_scale" />

                        <com.ab.health.view.RoundProgressBar
                            android:id="@+id/FoodProgressBar"
                            android:layout_width="165dip"
                            android:layout_height="165dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/task_circle_round"
                            android_custom:roundColor="#dddddd"
                            android_custom:roundProgressColor="#ff24cdd8"
                            android_custom:roundWidth="8dip" />

                        <RelativeLayout
                            android:id="@+id/task_consum_background2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/task_ground_state" >

                            <ImageView
                                android:id="@+id/task_consum_needle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3.0dip"
                                android:background="@drawable/main_blue_bar" />

                            <TextView
                                android:id="@+id/task_consum_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_consum_needle2"
                                android:layout_centerHorizontal="true"
                                android:text="热量摄入/控制"
                                android:textColor="#ffff6a62" />

                            <TextView
                                android:id="@+id/task_consum_kg_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_consum_tv2"
                                android:layout_centerHorizontal="true"
                                android:text="(千卡)"
                                android:textColor="#ff999999" />

                            <TextView
                                android:id="@+id/task_consum_current_textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_consum_kg_tv2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0.0dip"
                                android:text="12330"
                                android:textColor="#ffff6a62"
                                android:textSize="20.0dip" />

                            <TextView
                                android:id="@+id/task_course_target_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_consum_current_textView2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3.0dip"
                                android:text="12330"
                                android:textColor="#ff24cdd8"
                                android:textSize="18.0dip" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" >

                        <RelativeLayout
                            android:id="@id/task_current_weight_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="120.0dip"
                            android:background="@drawable/task_target_weight3"
                             >
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/task_add_userinfo_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    
                    android:orientation="vertical" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>