<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/add_userinfo_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffafafa"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10.0dip"
            android:text="更改个人信息"
            android:textColor="#ff24ced8"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/tool_standardweight_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_state" />

        <TextView
            android:id="@id/add_userinfo_next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:text="提 交"
            android:textColor="@color/title_right_text_selector"
           android:textSize="18.0dip"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@id/add_userinfo_height_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:background="@drawable/regist_height" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:text="身高"
                            android:textColor="#ff333333"
                            android:textSize="18.0dip" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/add_userinfo_height_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:text="(厘米)"
                        android:textColor="#ff999999"
                        android:textSize="16.0dip" />

                    <EditText
                        android:id="@id/add_userinfo_height_editText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:layout_toLeftOf="@id/add_userinfo_height_unit"
                        android:layout_toRightOf="@id/add_userinfo_height_layout"
                        android:background="#00000000"
                        android:gravity="right|center"
                        android:hint="请输入身高"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#ffee6666"
                        android:textSize="18.0dip" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />
                
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@id/add_userinfo_weight_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:background="@drawable/regist_sex" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:text="姓名"
                            android:textColor="#ff333333"
                            android:textSize="18.0dip" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/add_userinfo_weight_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:text="(昵称)"
                        android:textColor="#ff999999"
                        android:textSize="16.0dip" />

                    <EditText
                        android:id="@+id/add_userinfo_nicename_editText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:layout_toLeftOf="@id/add_userinfo_weight_unit"
                        android:layout_toRightOf="@id/add_userinfo_weight_layout"
                        android:background="#00000000"
                        android:gravity="right|center"
                        android:hint="请输入姓名"                        
                        android:textColor="#ffee6666"
                        android:textSize="18.0dip" />
                </RelativeLayout>
                

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />
                
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@id/add_userinfo_weight_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:background="@drawable/regist_birthday" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:text="年龄"
                            android:textColor="#ff333333"
                            android:textSize="18.0dip" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/add_userinfo_weight_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:text="(周岁)"
                        android:textColor="#ff999999"
                        android:textSize="16.0dip" />

                    <EditText
                        android:id="@+id/tool_userinfo_age_editText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:layout_toLeftOf="@id/add_userinfo_weight_unit"
                        android:layout_toRightOf="@id/add_userinfo_weight_layout"
                        android:background="#00000000"
                        android:gravity="right|center"
                        android:hint="请输入岁数"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textColor="#ffee6666"
                        android:textSize="18.0dip" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:background="@drawable/space_white_state"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@id/add_userinfo_sex_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="@drawable/regist_sex" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:layout_toRightOf="@id/add_userinfo_sex_image"
                        android:text="性别"
                        android:textColor="#ff333333"
                        android:textSize="18.0dip" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@id/add_userinfo_sex_woman"
                            android:layout_width="60.0dip"
                            android:layout_height="30.0dip"
                            android:background="@drawable/pk_group_left_press"
                            android:paddingBottom="5.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingTop="5.0dip"
                            android:text="女"
                            android:textColor="#ffffffff"
                            android:textSize="17.0dip" />

                        <Button
                            android:id="@id/add_userinfo_sex_man"
                            android:layout_width="60.0dip"
                            android:layout_height="30.0dip"
                            android:background="@drawable/button_right_normal"
                            android:paddingBottom="5.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingTop="5.0dip"
                            android:text="男"
                            android:textColor="#ff999999"
                            android:textSize="17.0dip" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />
                 <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@id/add_userinfo_height_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:background="@drawable/regist_birthday" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:text="血压"
                            android:textColor="#ff333333"
                            android:textSize="18.0dip" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/add_userinfo_height_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:text="(mmHg)"
                        android:textColor="#ff999999"
                        android:textSize="16.0dip" />

                    <EditText
                        android:id="@+id/xueya_shousuoya"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:layout_toLeftOf="@id/add_userinfo_height_unit"
                        android:layout_toRightOf="@id/add_userinfo_height_layout"
                        android:background="#00000000"
                        android:gravity="right|center"
                        android:hint="请输入收缩压"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#ff999999"
                        android:textSize="18.0dip" />

                </RelativeLayout>
                  <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@id/add_userinfo_height_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:background="@drawable/regist_birthday" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:text="血压"
                            android:textColor="#ff333333"
                            android:textSize="18.0dip" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/add_userinfo_height_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:text="(mmHg)"
                        android:textColor="#ff999999"
                        android:textSize="16.0dip" />

                    <EditText
                        android:id="@+id/xueya_shuzhangya"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:layout_toLeftOf="@id/add_userinfo_height_unit"
                        android:layout_toRightOf="@id/add_userinfo_height_layout"
                        android:background="#00000000"
                        android:gravity="right|center"
                        android:hint="请输入舒张压"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#ff999999"
                        android:textSize="18.0dip" />

                </RelativeLayout>

                
             

                

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/LinearLayout01"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15.0dip"
                                android:background="@drawable/regist_birthday" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15.0dip"
                                android:text="血糖"
                                android:textColor="#ff333333"
                                android:textSize="18.0dip" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20.0dip"
                            android:text="(mmol)"
                            android:textColor="#ff999999"
                            android:textSize="16.0dip" />

                        <EditText
                            android:id="@+id/xuetang"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="2.0dip"
                            android:layout_toLeftOf="@+id/TextView01"
                            android:layout_toRightOf="@+id/LinearLayout01"
                            android:background="#00000000"
                            android:gravity="right|center"
                            android:hint="请输入血糖"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColor="#ff999999"
                            android:textSize="18.0dip" >

                           
                        </EditText>
                    </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    

</LinearLayout>