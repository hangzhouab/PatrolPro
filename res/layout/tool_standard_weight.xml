<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/add_userinfo_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffafafa"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10.0dip"
            android:text="标准体重"
            android:textColor="#ff24ced8"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/tool_standardweight_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_state" />

        <TextView
            android:id="@id/add_userinfo_next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:text="计  算"
            android:textColor="@color/title_right_text_selector"
           android:textSize="18.0dip"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@id/add_userinfo_height_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:background="@drawable/regist_height" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:text="身高"
                            android:textColor="#ff333333"
                            android:textSize="18.0dip" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/add_userinfo_height_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:text="(厘米)"
                        android:textColor="#ff999999"
                        android:textSize="16.0dip" />

                    <EditText
                        android:id="@id/add_userinfo_height_editText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:layout_toLeftOf="@id/add_userinfo_height_unit"
                        android:layout_toRightOf="@id/add_userinfo_height_layout"
                        android:background="#00000000"
                        android:gravity="right|center"
                        android:hint="请输入身高"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#ff999999"
                        android:textSize="18.0dip" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />

                <LinearLayout
                    android:id="@id/add_userinfo_brithday_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:background="@drawable/space_white_state"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15.0dip"
                        android:background="@drawable/regist_birthday" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15.0dip"
                        android:text="年龄"
                        android:textColor="#ff333333"
                        android:textSize="18.0dip" />
                    
                    

                    <EditText
                        android:id="@+id/tool_userinfo_age_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                        android:layout_marginLeft="85.0dip"
                        android:background="#00000000"
                        android:gravity="right|center"
                        android:hint="请输入年龄"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#ff999999"
                        android:textSize="18.0dip" />
                     
                    
                    
                 
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:background="@drawable/space_white_state"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@id/add_userinfo_sex_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="@drawable/regist_sex" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:layout_toRightOf="@id/add_userinfo_sex_image"
                        android:text="性别"
                        android:textColor="#ff333333"
                        android:textSize="18.0dip" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@id/add_userinfo_sex_woman"
                            android:layout_width="60.0dip"
                            android:layout_height="30.0dip"
                            android:background="@drawable/pk_group_left_press"
                            android:paddingBottom="5.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingTop="5.0dip"
                            android:text="女"
                            android:textColor="#ffffffff"
                            android:textSize="17.0dip" />

                        <Button
                            android:id="@id/add_userinfo_sex_man"
                            android:layout_width="60.0dip"
                            android:layout_height="30.0dip"
                            android:background="@drawable/pk_group_right_noaml"
                            android:paddingBottom="5.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingTop="5.0dip"
                            android:text="男"
                            android:textColor="#ff999999"
                            android:textSize="17.0dip" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffbfbfbf" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标准体重为："
                android:textColor="#ff24ced8"
                android:textSize="18.0dip" />

            <TextView
                android:id="@+id/tool_standard_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18.0dip" />
            <TextView
                android:id="@+id/tool_standard_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公斤"
                android:textSize="18.0dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>