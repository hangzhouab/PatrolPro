<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_item_state"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/yys_head"
        android:layout_width="75.0dip"
        android:layout_height="75.0dip"
        android:layout_margin="10.0dip"
        android:src="@drawable/gonggaoitem4"
        android:focusable="false"
        android:scaleType="fitXY" />
  
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical" > 
            <TextView
                android:id="@+id/yys_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yys_jieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/value_text_size" />
        </LinearLayout>

        <Button
            android:id="@+id/gotochat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="18.0dip"
            android:background="@drawable/goto_chat"
            android:focusable="false" />
    </RelativeLayout>

</LinearLayout>